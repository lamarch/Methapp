<Window x:Class="MethApp.win_PARAM"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MethApp"
        mc:Ignorable="d"
        Title="Paramètres" SizeToContent="WidthAndHeight">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top">
            <CheckBox Content="Faire une sauvegarde des données à chaque démarrage" IsChecked="False" Margin="5"/>
            <TextBlock Text="" Margin="10"/>
            <Button x:Name="bt_apply" Content="Appliquer" VerticalAlignment="Bottom" Click="Bt_apply_Click" Margin="5"/>
            <Button x:Name="bt_return" Content="Annuler" VerticalAlignment="Bottom" Click="Bt_return_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
